{
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": "./src",
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,

    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
